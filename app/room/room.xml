<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundImage="~/images/background.jpg">

    <StackLayout>
        <StackLayout>
            <Label backgroundColor="rgba(0,0,0,0.3)" width="100%" textAlignment="center" text="{{ titolo }}" class="optimusFont_Bold" fontSize="42" horizontalAlignment="center" marginBottom="10"/>


            <ListView class="list-group" items="{{ items }}" itemTap="onTap" height="100%">
                <ListView.itemTemplate>
                    <FlexboxLayout flexDirection="row" class="list-group-item;">
                        <StackLayout flexGrow="1" orientation="vertical" marginBottom="20" marginRight="5" marginLeft="5" backgroundColor="rgba(0,0,0,0.3)">
                            <GridLayout height="128">
                                <Image src="{{ image }}" stretch="aspectFill"/>
                            </GridLayout>
                            <Label class="TimelessFont" text="{{ title }}" width="70%" color="white" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                        </StackLayout>
                    </FlexboxLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>