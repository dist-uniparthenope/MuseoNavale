<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundImage="~/images/background.jpg">

    <StackLayout>
        <TextView
                backgroundColor="rgba(0,0,0,0.3)"
                id = "search"
                class="tfstyle"
                text = "{{ search_text }}"
                width="90%"
                marginTop="5"
                marginBottom="10"
                horizontalAlignment="center"
                loaded="onTextViewLoaded"
                hint="{{ _L('search_bar') }}"/>

        <ScrollView height="100%">
            <ListView class="list-group" items="{{ items }}" itemTap="onTap" orientation="vertical">
                <ListView.itemTemplate>
                    <FlexboxLayout flexDirection="row" class="list-group-item;">
                        <StackLayout flexGrow="1" orientation="vertical" marginBottom="20" marginRight="5" marginLeft="5" backgroundColor="rgba(0,0,0,0.3)">
                            <StackLayout height="128">
                                <Image src="{{ image }}" stretch="aspectFill"/>
                            </StackLayout>
                            <Label class="TimelessFont" text="{{ title }}" width="70%" color="white" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                        </StackLayout>
                    </FlexboxLayout>
                </ListView.itemTemplate>
            </ListView>
        </ScrollView>
    </StackLayout>
</Page>