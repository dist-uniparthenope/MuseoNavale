<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundImage="~/images/background.jpg">

    <StackLayout>
        <TextView
                id = "search"
                class="tfstyle"
                text = "{{ search_text }}"
                width="50%"
                horizontalAlignment="center"
                loaded="onTextViewLoaded"
                hint="{{ _L('search_bar') }}"/>

        <ScrollView height="100%">
            <ListView class="list-group" items="{{ items }}" itemTap="onTap" orientation="vertical">
                <ListView.itemTemplate>
                    <FlexboxLayout flexDirection="row" class="list-group-item;">
                        <StackLayout flexGrow="1" orientation="horizontal">
                            <StackLayout width="30%">
                                <Image src="{{ image }}" width="65" height="65" marginRight="10"/>
                            </StackLayout>
                            <Label text="{{ title }}" width="70%" color="white" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                        </StackLayout>
                    </FlexboxLayout>
                </ListView.itemTemplate>
            </ListView>
        </ScrollView>
    </StackLayout>
</Page>