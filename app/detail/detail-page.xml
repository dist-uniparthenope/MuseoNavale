<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:ns="nativescript-carousel"
        backgroundImage="~/images/background.jpg"
        actionBarHidden="true">

    <StackLayout>
        <GridLayout verticalAlignment="top"  visibility="{{ tour_visibility }}" marginTop="5">
            <Button horizontalAlignment="left" text="Precedente" color="#aaaaaa" backgroundColor="rgba(64,43,18,0.8)" tap="back" />
            <Label class="roomNumber" text="{{ codice }}" width="20%" horizontalAlignment="center" color="#aaaaaa" verticalAlignment="bottom"/>
            <Button horizontalAlignment="right" text="Successivo" color="#aaaaaa" backgroundColor="rgba(64,43,18,0.8)" tap="next"/>
        </GridLayout>
    <GridLayout>
        <GridLayout verticalAlignment="top" height="50%" marginTop="10">
            <ns:Carousel id="myCarousel" items="{{ images }}" color="white" indicatorColorUnselected="#5064563c" pageChanged="myChangeEvent" pageTapped="mySelectedEvent" android:indicatorAnimation="slide"  indicatorColor="#64563c" indicatorOffset="0,0" showIndicator="true">
                <ns:Carousel.itemTemplate>
                    <ns:CarouselItem backgroundColor="#9FC8DA">
                        <GridLayout >
                            <Image src="{{ image }}" stretch="aspectFill" />
                            <Label backgroundColor="rgba(0,0,0,0.3)" color="#bbbbbb" text="{{ title }}" fontSize="24" textAlignment="center" verticalAlignment="top" textWrap="true" class="optimusFont"></Label>
                        </GridLayout>
                    </ns:CarouselItem>
                </ns:Carousel.itemTemplate>
            </ns:Carousel>
        </GridLayout>

    <StackLayout orientation="vertical" verticalAlignment="bottom">
        <ScrollView height="40%" marginTop="5">
            <Label text="{{ text }}" color="white" textAlignment="center" textWrap="true"></Label>
        </ScrollView>

        <StackLayout verticalAlignment="bottom" orientation="vertical" marginTop="5" backgroundColor="rgba(0,0,0,0.3)">
            <StackLayout orientation="horizontal" horizontalAlignment="center">
                <!--
                <StackLayout width="40%" orientation="horizontal" visibility="{{ tour_visibility }}">
                    <Button text="<" backgroundColor="white" tap="back" width="20%"/>
                    <Button text=">" backgroundColor="white" tap="next" width="20%"/>
                </StackLayout>
                -->
                <Image src="{{ play_image }}"  tap="play_audio" width="35" marginTop="5" marginBottom="5"/>
                <StackLayout orientation="horizontal" marginLeft="20" >
                    <Label text="{{ text_time }}" color="white" verticalAlignment="center"/>
                    <Slider value="{{ value }}"  minValue="{{ min }}" maxValue="{{ max }}" loaded="onSliderLoaded" width="70%"/>
                    <Label text="{{ duration }}" color="white" verticalAlignment="center"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </StackLayout>
    </GridLayout>
    </StackLayout>
</Page>
