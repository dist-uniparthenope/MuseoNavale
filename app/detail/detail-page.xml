<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:ns="nativescript-carousel"
        backgroundImage="~/images/background.jpg"
        actionBarHidden="true">

    <GridLayout>
        <GridLayout verticalAlignment="top" height="50%" marginTop="10">
            <ns:Carousel id="myCarousel" items="{{ images }}" color="white" indicatorColorUnselected="#50ffffff" pageChanged="myChangeEvent" pageTapped="mySelectedEvent" android:indicatorAnimation="slide"  indicatorColor="#ffffff" indicatorOffset="0,0" showIndicator="true">
                <ns:Carousel.itemTemplate>
                    <ns:CarouselItem backgroundColor="#9FC8DA">
                        <GridLayout>
                            <Image src="{{ image }}" stretch="aspectFill" />
                            <Label backgroundColor="rgba(0,0,0,0.3)" color="#bbbbbb" text="{{ title }}" fontSize="24" textAlignment="center" verticalAlignment="top" textWrap="true" class="optimusFont"></Label>
                        </GridLayout>
                    </ns:CarouselItem>
                </ns:Carousel.itemTemplate>
            </ns:Carousel>
        </GridLayout>

    <StackLayout orientation="vertical" verticalAlignment="bottom">
        <ScrollView height="40%" marginTop="5">
            <Label text="{{ text }}" color="white" textAlignment="center" textWrap="true"></Label>
        </ScrollView>

        <StackLayout verticalAlignment="bottom" orientation="vertical" marginTop="5" backgroundColor="rgba(0,0,0,0.3)">
            <StackLayout orientation="horizontal" horizontalAlignment="center">
                <Button text="{{ text_button }}" backgroundColor="white" tap="play_audio" width="30%" marginRight="5"/>
                <StackLayout orientation="horizontal" width="70%">
                    <Label text="{{ text_time }}" color="white" verticalAlignment="center"/>
                    <Slider value="{{ value }}"  minValue="{{ min }}" maxValue="{{ max }}" loaded="onSliderLoaded" width="70%"/>
                    <Label text="{{ duration }}" color="white" verticalAlignment="center"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </StackLayout>
    </GridLayout>
</Page>
