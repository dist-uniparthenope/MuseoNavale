<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
    <ActionBar class="blue_background_action_bar">
        <Label class="" text="Info" fontSize="20"></Label>
    </ActionBar>

    <ScrollView>
        <StackLayout orientation="vertical">
            <Image src="~/images/logo.png" horizontalAlignment="center" margin="20 20 20 20"></Image>
            <StackLayout orientation="horizontal" horizontalAlignment="center" marginTop="5">
                <Label text="Versione" marginRight="10"></Label>
                <Label text="{{version}}"></Label>
            </StackLayout>
            <Label textAlignment="center" textWrap="true" text="https://museonavale.uniparthenope.it" marginTop="5" color="blue" tap="meteo_web"></Label>
            <Label textAlignment="center" textWrap="true" text="Dipartimento di Scienze e Tecnologie, Università degli Studi di Napoli Parthenope" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="Responsabile Scientifico: Prof. Antonio Scamardella" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="Team leader: Prof. Raffaele Montella" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="Sviluppo: Ciro Giuseppe De Vita, Alberto Greco, Gennaro Mellone" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" text="Logo: Francesco Peluso" marginTop="10"></Label>
            <Button textWrap="true" text="Copyright ©" ontap="onTapCopy" margin="10 5 0 5"></Button>
            <Button textWrap="true" text="Disclaimer" ontap="onTapDisclaimer" margin="10 5 10 5"></Button>
        </StackLayout>
    </ScrollView>
</Page>
