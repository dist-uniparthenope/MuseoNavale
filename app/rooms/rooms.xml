<Page
        class="page"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Rooms"></Label>
    </ActionBar>

    <StackLayout>
        <ScrollView height="100%">
            <ListView class="list-group" items="{{ items }}" itemTap="onTap" orientation="vertical">
                <ListView.itemTemplate>
                    <FlexboxLayout flexDirection="row" class="list-group-item;">
                        <StackLayout flexGrow="1" orientation="horizontal">
                            <StackLayout width="30%">
                                <Image src="{{ image }}" width="65" height="65" marginRight="10"/>
                            </StackLayout>
                            <Label text="{{ id }}" width="70%" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                        </StackLayout>
                    </FlexboxLayout>
                </ListView.itemTemplate>
            </ListView>
        </ScrollView>
    </StackLayout>
</Page>