<Page
        class="page"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundColor="#D9BB84">

    <ScrollView>
        <StackLayout>
            <GridLayout tap="QRCode" marginBottom="20" marginTop="10" marginRight="5">
                <Image row="0" src="~/images/drawer_buttons/qrcode_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_scan') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
            <GridLayout tap="info" marginBottom="20" marginRight="5">
                <Image row="0" src="~/images/drawer_buttons/museum_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_museo') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>

            <GridLayout tap="rooms" marginBottom="20" marginRight="5" >
                <Image row="0" src="~/images/drawer_buttons/rooms_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_sale') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
            <GridLayout tap="tour" marginBottom="20" marginRight="5">
                <Image row="0" src="~/images/drawer_buttons/tour_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_tour') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
            <GridLayout tap="explore" marginBottom="20" marginRight="5">
                <Image row="0" src="~/images/drawer_buttons/explore_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_ricerca') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
            <GridLayout tap="about"  marginRight="5" marginBottom="10">
                <Image row="0" src="~/images/drawer_buttons/info_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_info') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
            <GridLayout tap="settings"  marginRight="5" marginBottom="10">
                <Image row="0" src="~/images/drawer_buttons/info_button.png" class="roundEdge"/>
                <Label color="#ffffff" row="1" fontSize="30" class="optimusFont_Bold" text="{{ _L('home_impostazioni') }}" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
            </GridLayout>
        </StackLayout>
    </ScrollView>
</Page>
