<Page
        class="page"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:sd="nativescript-ui-sidedrawer"
        actionBarHidden="true"
        backgroundColor="#D9BB84">

    <sd:RadSideDrawer id="sideDrawer">
        <sd:RadSideDrawer.drawerContent>
            <ScrollView>
                <StackLayout class="drawer">
                <GridLayout tap="QRCode" marginBottom="20" marginTop="10">
                    <Image row="0" src="~/images/drawer_buttons/qrcode_button.png"/>
                    <Label color="#402B12" row="1" fontSize="30" class="optimusFont_Bold" text="Scan QR" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
                </GridLayout>
                    <GridLayout tap="info" marginBottom="20">
                        <Image row="0" src="~/images/drawer_buttons/qrcode_button.png"/>
                        <Label row="1" fontSize="30" class="optimusFont" text="Info" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
                    </GridLayout>
                    <GridLayout tap="rooms" marginBottom="20">
                        <Image row="0" src="~/images/drawer_buttons/qrcode_button.png"/>
                        <Label row="1" fontSize="30" class="optimusFont" text="Sale" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
                    </GridLayout>
                    <GridLayout tap="tour" marginBottom="20">
                        <Image row="0" src="~/images/drawer_buttons/qrcode_button.png"/>
                        <Label row="1" fontSize="30" class="optimusFont" text="Tour" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
                    </GridLayout>
                    <GridLayout tap="explore">
                        <Image row="0" src="~/images/drawer_buttons/qrcode_button.png"/>
                        <Label row="1" fontSize="30" class="optimusFont" text="Esplora" textWrap="true" verticalAlignment="center" horizontalAlignment="right" marginRight="30"/>
                    </GridLayout>
            </StackLayout>
            </ScrollView>
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>
            <StackLayout>
                <ActivityIndicator class="activity-indicator" busy="{{ loading }}" height="{{ loading_height }}" verticalAlignment="center"/>

                <TextView
                        id = "search"
                        class="tfstyle"
                        text = "{{ search_text }}"
                        width="50%"
                        horizontalAlignment="center"
                        loaded="onTextViewLoaded"
                        hint="Ricerca...."/>

                <ScrollView height="100%">
                    <ListView class="list-group" items="{{ items }}" itemTap="onTap" orientation="vertical">
                        <ListView.itemTemplate>
                            <FlexboxLayout flexDirection="row" class="list-group-item;">
                                <StackLayout flexGrow="1" orientation="horizontal">
                                    <StackLayout width="30%">
                                        <Image src="{{ image }}" width="65" height="65" marginRight="10"/>
                                    </StackLayout>
                                    <Label text="{{ title }}" width="70%" color="white" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                                </StackLayout>
                            </FlexboxLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </ScrollView>
            </StackLayout>
        </sd:RadSideDrawer.mainContent>
    </sd:RadSideDrawer>
</Page>
