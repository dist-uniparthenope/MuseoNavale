<Page
        class="page"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:sd="nativescript-ui-sidedrawer">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="MuseoNavale"></Label>
    </ActionBar>

    <sd:RadSideDrawer id="sideDrawer">
        <sd:RadSideDrawer.drawerContent>
            <StackLayout class="white_background">
                <StackLayout orientation="horizontal" tap="QRCode">
                    <StackLayout width="30%">
                        <Image src="~/images/qr-code.png" width="35" marginRight="10" verticalAlignment="center"></Image>
                    </StackLayout>
                    <Label text="Scannerizza item" width="70%" verticalAlignment="center"/>
                </StackLayout>
                <StackLayout orientation="horizontal" tap="info">
                    <StackLayout width="30%">
                        <Image src="~/images/info.png" width="35" marginRight="10" verticalAlignment="center"></Image>
                    </StackLayout>
                    <Label text="Info" width="70%" verticalAlignment="center"/>
                </StackLayout>
            </StackLayout>
        </sd:RadSideDrawer.drawerContent>

        <sd:RadSideDrawer.mainContent>
            <StackLayout>
                <ActivityIndicator class="activity-indicator" busy="{{ loading }}" height="{{ loading_height }}" verticalAlignment="center"/>

                <TextView
                        id = "search"
                        text = "{{ search_text }}"
                        width="50%"
                        horizontalAlignment="center"
                        loaded="onTextViewLoaded"
                        hint="Ricerca...."/>

                <ScrollView height="100%">
                    <ListView class="list-group" items="{{ items }}" itemTap="onTap" orientation="vertical">
                        <ListView.itemTemplate>
                            <FlexboxLayout flexDirection="row" class="list-group-item;">
                                <StackLayout flexGrow="1" orientation="horizontal">
                                    <StackLayout width="30%">
                                        <Image src="{{ image }}" width="65" height="65" marginRight="10"/>
                                    </StackLayout>
                                    <Label text="{{ title }}" width="70%" textWrap="true" verticalAlignment="center" horizontalAlignment="center"/>
                                </StackLayout>
                            </FlexboxLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </ScrollView>
            </StackLayout>
        </sd:RadSideDrawer.mainContent>
    </sd:RadSideDrawer>
</Page>
