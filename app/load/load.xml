<Page
        class="coverIm"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundImage="~/images/background.jpg">


    <GridLayout>
        <StackLayout verticalAlignment="top">
            <Label text="{{ _L('caricamento') }}" textWrap="true" class="optimusFont" marginTop="20" fontSize="46" textAlignment="center" horizontalAlignment="center"></Label>
        </StackLayout>
        <StackLayout class="coverImage" orientation="vertical" marginBottom="50" verticalAlignment="center" backgroundImage="~/images/bussola-empty.png" >
            <Image id="toRotate" width="35%" src="~/images/lancetta.png"/>
        </StackLayout>
        <StackLayout verticalAlignment="center" marginBottom="50">
            <Label text="{{ loading }}" color="white" textWrap="true" class="optimusFont" fontSize="36" textAlignment="center" horizontalAlignment="center"></Label>
        </StackLayout>
    </GridLayout>
</Page>
